<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Horizontaler Balken (Plus) -->
    <item
        android:width="10dp"
        android:height="2dp"
        android:gravity="center_vertical">
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Farbe des Pluszeichens -->
        </shape>
    </item>

    <!-- Vertikaler Balken (Plus) -->
    <item
        android:width="2dp"
        android:height="10dp"
        android:gravity="center_horizontal">
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Farbe des Pluszeichens -->
        </shape>
    </item>
</layer-list>
