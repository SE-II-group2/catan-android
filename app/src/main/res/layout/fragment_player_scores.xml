<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.PlayerScoresFragment">

    <TextView
    android:id="@+id/firstPlayerScore"
    android:textColor="@color/black"
    android:gravity="end|center_vertical"
    android:autoSizeTextType="uniform"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHeight_percent="0.25"
    />

    <TextView
        android:id="@+id/secondPlayerScore"
        android:textColor="@color/black"
        android:gravity="end|center_vertical"
        android:autoSizeTextType="uniform"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstPlayerScore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"
        />

    <TextView
        android:id="@+id/thirdPlayerScore"
        android:textColor="@color/black"
        android:gravity="end|center_vertical"
        android:autoSizeTextType="uniform"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondPlayerScore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"
        />

    <TextView
        android:id="@+id/fourthPlayerScore"
        android:textColor="@color/black"
        android:gravity="end|center_vertical"
        android:autoSizeTextType="uniform"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thirdPlayerScore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.25"
        />

</androidx.constraintlayout.widget.ConstraintLayout>