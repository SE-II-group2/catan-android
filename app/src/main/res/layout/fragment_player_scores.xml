<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.PlayerScoresFragment">

    <!-- Erste Zeile -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/firstPlayerScore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="0dp"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:gravity="end|center_vertical"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/firstPlayerActive"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_vertical"
            android:src="@drawable/active_player_indicator" />
    </LinearLayout>

    <!-- Zweite Zeile -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/secondPlayerScore"
            android:layout_width="378dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="0dp"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:gravity="end|center_vertical"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/secondPlayerActive"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_vertical"
            android:src="@drawable/active_player_indicator" />
    </LinearLayout>

    <!-- Dritte Zeile -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/thirdPlayerScore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="0dp"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:gravity="end|center_vertical"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/thirdPlayerActive"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_vertical"
            android:src="@drawable/active_player_indicator" />
    </LinearLayout>

    <!-- Vierte Zeile -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fourthPlayerScore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="0dp"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:gravity="end|center_vertical"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/fourthPlayerActive"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_vertical"
            android:src="@drawable/active_player_indicator" />
    </LinearLayout>

</LinearLayout>
