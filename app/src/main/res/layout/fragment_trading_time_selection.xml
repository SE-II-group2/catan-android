<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.TradingTimeSelection">


    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/trading_popup_trading_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Max waiting time:"
        android:textColor="@color/black"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        />
    <ImageView
        android:id="@+id/trading_popup_time_minus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.33"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/minus"
        app:layout_constraintTop_toBottomOf="@+id/trading_popup_trading_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="5dp"
        />

    <TextView
        android:id="@+id/trading_popup_time"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="10s"
        app:autoSizeTextType="uniform"
        android:textColor="@color/black"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.33"
        app:layout_constraintTop_toBottomOf="@+id/trading_popup_trading_text"
        app:layout_constraintEnd_toStartOf="@+id/trading_popup_time_plus"
        app:layout_constraintStart_toEndOf="@+id/trading_popup_time_minus"
        app:layout_constraintBottom_toBottomOf="parent"

        />
    <ImageView
        android:id="@+id/trading_popup_time_plus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.33"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/plus"
        app:layout_constraintTop_toBottomOf="@+id/trading_popup_trading_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="5dp"

        />
</androidx.constraintlayout.widget.ConstraintLayout>